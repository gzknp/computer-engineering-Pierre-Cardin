<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cengPC.NoLogTakipPage" BackgroundColor="GhostWhite" >

    <NavigationPage.TitleView >

        <Label  TextColor="Black" Text="Üyeliksiz Sipariş Takibi" 
              FontSize="20" HorizontalTextAlignment="Start"></Label>

    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout  BackgroundColor="White" Orientation="Vertical" VerticalOptions="Center" Margin="40,0,40,100">
            <Label Text="Sipariş Takip  " FontSize="Large" FontAttributes="Bold"
                   HorizontalOptions="Start" />
            <Label Text="Sipariş takibi için e-posta ve sipariş numaranızı giriniz."
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <Entry Placeholder="* Sipariş Numaranız"/>
            <Entry Placeholder="* E-posta"/>
            <Button Text="GÖRÜNTÜLE" TextColor="White" BackgroundColor="Brown"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>